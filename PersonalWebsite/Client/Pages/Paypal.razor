@page "/paypal"
@inject IJSRuntime JS

<h3>Check Out</h3>

<div id="paypal-button"></div>

<footer id="copyR"> &copy; Obaidi Site 2020</footer>
<style>
    header {
        font-family: "Candara";
        font-size: 22px;
    }

    body {
        font-family: "Candara";
        background-color: #171717;
    }

    footer {
        position: fixed;
        bottom: 0;
        right: 0;
        font-family: "Candara";
    }
</style>

@code
{ //call render_paypal_button js function at startup

    decimal ammount = 10.00M;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        await JS.InvokeVoidAsync("render_paypal_button", ammount);
    } }